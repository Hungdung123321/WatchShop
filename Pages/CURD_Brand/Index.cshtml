@page
@model WatchShop.Pages.CURD_Brand.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="">
        <h1>Danh sách Hãng: <a class="btn btn-primary " asp-page="Create">+ Thêm một hãng</a></h1>
    </div>
    <table class="table w-100">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand[0].LogoUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand[0].Origin)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Brand)
            {
                <tr>
                    <td>
                        <img src="@item.LogoUrl" width="120px" height="50px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.BrandId">Edit</a> |
                        <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.BrandId">Details</a> |
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.BrandId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    tr td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
    }
</style>