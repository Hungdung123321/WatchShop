@page
@model WatchShop.Pages.CURD_Brand.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Thêm một hãng</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Brand.Name" class="control-label mb-2"></label>
                <input asp-for="Brand.Name" class="form-control" />
                <span asp-validation-for="Brand.Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Brand.Description" class="control-label mb-2"></label>
                <input asp-for="Brand.Description" class="form-control" />
                <span asp-validation-for="Brand.Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Brand.LogoUrl" class="control-label mb-2"></label>
                <input asp-for="Brand.LogoUrl" class="form-control" />
                <span asp-validation-for="Brand.LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Brand.Origin" class="control-label mb-2"></label>
                <input asp-for="Brand.Origin" class="form-control" />
                <span asp-validation-for="Brand.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
