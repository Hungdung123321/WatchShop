@page
@model WatchShop.Pages.CURD_Brand.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <h1>@Html.DisplayFor(model => model.Brand.Name)</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.LogoUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Brand.LogoUrl)" width="120px" height="50px"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Description)
        </dt>
        <dd class="col-sm-10">
            <b>@Html.DisplayFor(model => model.Brand.Description)</b>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand.Origin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Origin)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Brand.BrandId">Edit</a> |
    <a class="btn btn-secondary" asp-page="./Index"> <- Back to List</a>
</div>
